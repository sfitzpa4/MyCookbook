extends header

block content
    .w3-main.w3-content.w3-padding(style='max-width:600px;margin-top:100px')
        // First Photo Grid
        .w3-center.w3-padding-32
            h3 Sign Up for MyCookbook
                .w3-two-thirds.w3-row-padding.w3-border.w3-border-purple
                    form(action='/signup' method='POST')
                        .w3-padding-16
                            label(for='first_name') First Name:
                            input.w3-input.form-control(type='text' id='first_name' placeholder='first name' name='first_name')
                        .w3-padding-16
                            label(for='last_name') Last Name:
                            input.w3-input.form-control(type='text' id='last_name' placeholder='last name' name='last_name')
                        .w3-padding-16
                            label(for='username') User Name:
                            input.w3-input.form-control(type='text' id='username' placeholder='username' name='username')
                        .w3-padding-16
                            label(for='password') Password:
                            input.w3-input.form-control(type='password' id='password' placeholder='password' name='password')
                        .w3-padding-16
                            input(type='submit', name='submit', value= "Sign Up")

