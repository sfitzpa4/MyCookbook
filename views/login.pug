extends header

block content
    .w3-main.w3-content.w3-padding(style='max-width:600px;margin-top:100px')
        // First Photo Grid
        .w3-center.w3-padding-32
            h3 Log In to MyCookbook
                .w3-two-thirds.w3-row-padding.w3-border.w3-border-purple
                    form(action='/users/' method='POST')
                        .w3-padding-16
                            label(for='username') Username:
                            input.w3-input(type='text' id='username' placeholder='username' name='username')
                        .w3-padding-16
                            label(for='password') Password:
                            input.w3-input(type='password' id='password' placeholder='password' name='password')
                        .w3-padding-16
                            input(type='submit', name='submit', value= "Log in")