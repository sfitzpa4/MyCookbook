extends header

block content
    .w3-main.w3-content.w3-padding(style='max-width:1200px;margin-top:100px')
        // First Photo Grid
        .w3-center.w3-padding-32
            .w3-two-thirds.w3-row-padding.w3-border.w3-border-purple
                form(action='/create' method='POST' enctype='multipart/form-data')
                    .w3-padding-16
                        label(for='name') Recipe Name:
                        input.w3-input(type='text', placeholder='Name of Recipe', name='name')
                    .w3-padding-16
                        label(for='author') Author:
                        input.w3-input(type='text', placeholder='Name of Author', name='author')
                    .w3-padding-16
                        label(for='ingredients') Ingredient List:
                        textarea.w3-textarea(type='text', placeholder='List Ingredients', name='ingredients' style="width:100%; margin:0px;")
                    .w3-padding-16
                        label(for='directions') Directions:
                        textarea.w3-textarea(type='text', placeholder='Directions', name='directions' style="width:100%; margin:0px;")
                    .w3-padding-16
                        // TODO: Figure out how to replace placeholder image with uploaded image
                        img.image(src='/images/placeholder_image.png')
                    .w3-padding-16
                        input(type="file", name="myFile")
                    .w3-padding-16
                        input(type='submit', name='submit')

