extends default

block content
    div.recipe
        div.col-md-12.col-md-offset-3
            h1.display-4.m-b-2 Enter Recipe
            body
                form(action='/create' method='POST')
                    div.recipe-form
                        label(for='name') Recipe Name:
                        input#name.form-control(type='text', placeholder='Name of Recipe', name='name')
                    div.recipe-form
                        label(for='author') Author:
                        input#name.form-control(type='text', placeholder='Name of Author', name='author')
                    div.recipe-text-area
                        label(for='ingredients') Ingredient List:
                        textarea(type='text', placeholder='List of Ingredients Here', name='ingredients')
                    div.recipe-form.button
                        input(type='submit', name='submit')
        form(action='/uploadFile' method='POST' enctype='multipart/form-data')    
            div.recipe-images
                div.recipe-image
                    img.image(src='/images/placeholder_image.png')
                    input(type="file", name="myFile")
                    input.button.button-twitter(type="submit", value="Add Photo")

