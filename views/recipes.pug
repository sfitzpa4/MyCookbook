extends header

block content
    .w3-main.w3-content.w3-padding(style='max-width:1200px;margin-top:100px')
        table.w3-table-all
            tr
                th Recipe Name
                th Author
            each recipe in query
                tr
                    - var recipePage = "/recipe/" + recipe.name
                    td
                        a(href=recipePage) #{recipe.name}
                    - var authorPage = "/users/" + recipe.author
                    td
                        a(href=authorPage) #{recipe.author}
        .w3-center.w3-padding-32
                .w3-bar
                a.w3-bar-item.w3-button.w3-hover-black(href='#') &laquo;
                a.w3-bar-item.w3-black.w3-button(href='#') 1
                a.w3-bar-item.w3-button.w3-hover-black(href='#') 2
                a.w3-bar-item.w3-button.w3-hover-black(href='#') 3
                a.w3-bar-item.w3-button.w3-hover-black(href='#') 4
                a.w3-bar-item.w3-button.w3-hover-black(href='#') &raquo;